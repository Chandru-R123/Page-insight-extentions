{
  "manifest_version": 3,
  "name": "Page Insight",
  "version": "1.0",
  "description": "AI-powered insights for any webpage",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:5000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/normal16.png",
      "48": "icons/normal48.png"
    }
  },
  "icons": {
    "16": "icons/normal16.png",
    "48": "icons/normal48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
